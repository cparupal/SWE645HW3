pipeline {
  agent any
  environment {
    DOCKERHUB_PASS = credentials('docker-pass')
  }
  stages {
    stage ("Building the web app into a docker image"){
      steps {
        script {
          checkout scm
          sh 'cd SWE645HW3/surveyapi'
          sh "docker login -u cparupal -p $DOCKERHUB_PASS_PSW"
          sh "docker build -t cparupal/studentsurveyapi:${env.BUILD_ID} ."
          
        }
      }
    }
    
    stage("Pushing Image to Dockerhub"){
      steps{
        script{
          sh "docker push cparupal/studentsurveyapi:${env.BUILD_ID}"
        }
      }
    }

  }
}
